{
  "compilerOptions": {
    "sourceMap": true,
    "lib": [
      "esnext"
    ],
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "shared/src/main/*"
      ],
      "@student/*": [
        "student/src/main/*"
      ],
      "@instructor/*": [
        "instructor/src/main/*"
      ],
      "@gymclass/*": [
        "gymclass/src/main/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
